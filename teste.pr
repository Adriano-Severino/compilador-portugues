// Programa em português
inteiro idade = 25;
texto nome = "João";

imprima("Olá mundo!");
imprima(nome);
imprima(idade);

se idade > 18 então {
    imprima("Maior de idade");
} senão {
    imprima("Menor de idade");
}

inteiro contador = 0;
enquanto contador < 5 {
    imprima(contador);
    contador = contador + 1;
}