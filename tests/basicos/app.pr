espaco MeuProjeto {
    classe Pessoa {
        publico texto nome;
        publico inteiro idade;
        
        publico Pessoa(texto n, inteiro i) {
            nome = n;
            idade = i;
        }
        
        publico vazio apresentar() {
            imprima("Olá, meu nome é " + nome);
            imprima("Tenho " + idade + " anos");
        }
    }
}

função principal() {
    var pessoa = novo Pessoa("João", 30);
    pessoa.apresentar();
}